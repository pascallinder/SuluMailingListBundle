
<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns:xi="http://www.w3.org/2001/XInclude"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <property name="fontFamily" type="single_select">
        <meta>
            <title>mailingListMail.props.content.global.fontFamily.label</title>
        </meta>
        <params>
            <param name="default_value" type="expression" value="service('mailing.font-pool').getDefaultValue()"/>
            <param name="values" type="expression" value="service('mailing.font-pool').getFontSelection()"/>
        </params>
    </property>
    <property name="fontSize" type="range_picker" colspan="6">
        <meta>
            <title>mailingListMail.props.content.global.fontSize.label</title>
        </meta>
        <params>
            <param name="min" value="0"/>
            <param name="max" value="100"/>
            <param name="step" value="1"/>
            <param name="default" value="16" />
        </params>
    </property>
    <property name="fontLineHeight" type="range_picker" colspan="6">
        <meta>
            <title>mailingListMail.props.content.global.fontLineHeight.label</title>
        </meta>
        <params>
            <param name="min" value="0"/>
            <param name="max" value="3"/>
            <param name="step" value="0.1"/>
            <param name="default" value="1" />
        </params>
    </property>
    <xi:include href="./color.xml"
                xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                      xpointer(/sulu:properties/sulu:property)"/>
</properties>