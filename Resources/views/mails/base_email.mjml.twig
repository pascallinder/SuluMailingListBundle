<mjml>
    <mj-head>
        <mj-title>
            {% block title %}
            {% endblock %}
        </mj-title>
        {% set defaultFont = fonts|filter(f => f.defaultFont)|first %}
        {% block css %}
            <mj-style>
                .mjml-text-container *{
                    text-align: left;
                }
                .mjml-text-container *:first-child{
                    margin-top: 0;
                }
                .mjml-text-container *:last-child{
                    margin-bottom: 0;
                }
                {% if defaultFont is defined and defaultFont is not null %}
                    a[href="url"]{
                        font-family: {{defaultFont.fontFamily|default}};
                    }
                {% endif %}
            </mj-style>
        {% endblock %}
        {% block additonal_css %}
        {% endblock %}
        {% block fonts %}

            {% if fonts is defined and fonts is not null %}
                {% for font in fonts %}
                    <mj-font href="{{ font.cssUrl }}" name="{{ font.name }}" />
                {% endfor %}
            {% endif %}
        {% endblock %}

        <mj-attributes>
            {% if defaultFont is defined and defaultFont is not null %}
                <mj-all font-family="{{ defaultFont.fontFamily|default }}" />
            {% endif %}
            {% block addtional_attributes %}
            {% endblock %}
        </mj-attributes>
        {% block additional_head %}
        {% endblock %}

    </mj-head>
    <mj-body background-color="{{ backgroundColor|default }}" >
        {% block header %}
        {% endblock %}
        {% block content %}
            {% if content is defined and content is not null %}
                {% for wrapper in content %}
                    {% include '@SuluMailingList/mails/wrappers/' ~ wrapper.type ~ '.mjml.twig' with {
                        wrapper: wrapper
                    } %}
                {% endfor %}
            {% endif %}
        {% endblock %}
        {% block footer %}
        {% endblock %}
    </mj-body>
</mjml>