<mjml>
    <mj-head>
        <mj-title>
            {% block title %}
            {% endblock %}
        </mj-title>
        {% block css %}
            <mj-style>
                .mjml-text-container *:first-child{
                    margin-top: 0;
                }
                .mjml-text-container *:last-child{
                    margin-bottom: 0;
                }
            </mj-style>
        {% endblock %}
        {% block additonal_css %}
        {% endblock %}
        {% block fonts %}
            {% if fonts is defined and fonts is not null %}
                {% for font in fonts %}
                    <mj-font href="{{ font.cssUrl }}" name="{{ font.name }}" />
                    {% if font.defaultFont %}
                        {% set defaultFont = font %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endblock %}

        <mj-attributes>
            {% if defaultFont is defined and defaultFont is not null %}
                <mj-all font-family="{{ font.fontFamily }}" />
            {% endif %}
            {% block addtional_attributes %}
            {% endblock %}
        </mj-attributes>
        {% block additional_head %}
        {% endblock %}
    </mj-head>
    <mj-body background-color="{{ config.bodyBackgroundColor|default }}">
        {% block header %}
        {% endblock %}
        {% block content %}
            {% if content is defined and content is not null %}
                {% for wrapper in content %}
                    {% include '@SuluMailingList/mails/wrappers/' ~ wrapper.type ~ '.mjml.twig' with {
                        wrapper: wrapper
                    } %}
                {% endfor %}
            {% endif %}
        {% endblock %}
        {% block footer %}
        {% endblock %}
    </mj-body>
</mjml>