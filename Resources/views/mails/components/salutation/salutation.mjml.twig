{% block salutation %}
    {% set text = item.prefix ~ ' ' ~ firstName %}
    {% if item.withLastName is defined and item.withLastName %}
        {% set text = text ~ ' ' ~ lastName %}
    {% endif %}
    {% include '@SuluMailingList/mails/components/text/text.mjml.twig' with {
        item: {...item, value: text}
    } %}
{% endblock %}