{% block salutation %}
    {% if item.value is defined %}
        <mj-text font-size="{{ item.fontSize|default }}px"
                 font-family="{{ item.fontFamily |default}}"
                 css-class="mjml-text-container"
                 padding="{{ item.padding|default }}"
                 container-background-color="{{ item.backgroundColor|default }}"
                 color="{{ item.color|default }}">
            {{ item.value |raw }}
        </mj-text>
    {% endif %}
{% endblock %}