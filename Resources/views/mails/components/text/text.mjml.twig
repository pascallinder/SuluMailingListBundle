{% block salutation %}
    {% if item.value is defined %}
        <mj-text font-size="{{ item.fontSize|default('16') }}px"
                 font-family="{{ item.fontFamily |default}}"
                 container-background-color="{{ item.backgroundColor|default }}"
                 color="{{ item.color|default }}">
                <div class="mjml-text-container">
                    {{ item.value |raw }}
                </div>

        </mj-text>
    {% endif %}
{% endblock %}