{% block mail_content %}
    <mj-section
            {% if wrapper.backgroundColor is defined and wrapper.backgroundColor != 'inherit' %}
                background-color="{{ wrapper.backgroundColor}}"
            {% endif %}
    >
        <mj-column>
            {% for item in wrapper.columnOne %}
                {% include '@SuluMailingList/mails/components/'~  item.type ~ '/' ~ item.type ~ '.mjml.twig' with {
                    item: item
                } %}
            {% endfor %}
        </mj-column>
    </mj-section>
{% endblock %}